fuente1 = 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
fuente2 = 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
color-primario = #333333
color-secundario = #8141DA
color-claro = #FFFFFF

contenedor()
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro
  box-shadow: 0px 20px 33px 0px rgba(0, 0, 0, 0.30)

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: fuente2
  color: color-primario

.buscador
  width: 100%
  height: 250px
  padding: 100px
  background-image: url("../images/cover.png")
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  text-align: center
  &__input
    width: 75%
    height: 60px
    padding: 20px
    border: none
    border-radius: 30px
    font-size: 25px

.encabezado--con-filtros
  contenedor()
  h2
    margin-top: 10px
    text-transform: uppercase
    font-weight: 500
    font-size: 50px
    font-family: fuente2
  .filtros
    width: 250px
    height: 75px
    padding: 20px
    margin-left: auto
    caja-sombra()
    span
      text-transform: uppercase
      font-family: fuente2
      text-decoration: none
    a
      margin-left: 20px
      font-size: 25px

.contenido
  margin-bottom: 40px
  justify-content: space-evenly
  contenedor()

.caja
  max-width: 400px
  margin: 10px
  caja-sombra()
  &__imagen
    img
      width: 100%
      height:250px
      background-size: cover
      background-position: center
      background-repeat: no-repeat
  &__contenido
    padding: 20px
    background-color: color-claro
    span
      text-transform: uppercase
      color: color-secundario
      font-family: fuente2
      margin-bottom: 5px
    h3
      text-transform: uppercase
      font-weight: normal
      font-family: fuente2
      margin-bottom: 10px
    p

fuente1 = 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
fuente2 = 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
color-primario = #333333
color-secundario = #8141DA
color-claro = #FFFFFF

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  font-family: fuente2
  color: color-primario

.buscador
  width: 100%
  height: 250px
  padding: 100px
  background-image: url("../images/cover.png")
  background-size: cover
  background-position: center
  background-repeat: no-repeat
  text-align: center
  &__input
    width: 75%
    height: 60px
    padding: 250px
    border: none
    border-radius: 30px
    font-size: 25px

.encabezado--con-filtros
  display: flex
  width: 90%
  margin: 0 auto
  padding: 30px 0
  h2
    margin-top: 100px
    text-transform: uppercase
    font-weight: 500
    font-size: 50px
    font-family: fuente2
  .filtros
    width: 250px
    height: 75px
    padding: 250px
    margin-left: auto
    span
      text-transform: uppercase
      font-family: fuente2
    a
      margin-left: 20px
      font-size: 25px



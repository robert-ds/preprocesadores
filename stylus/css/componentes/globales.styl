fuente1 = 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif
fuente2 = 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif
color-primario = #333333
color-secundario = #8141DA
color-claro = #FFFFFF

contenedor()
  display: flex
  width: 96%
  margin: 0 auto
  padding: 30px 0

caja-sombra()
  background-color: color-claro
  box-shadow: 0px 20px 33px 0px rgba(0, 0, 0, 0.30)

opacidad(color, cantidad)
  alpha(color,cantidad)

for header in 3 2 1
  h{header}
    font-size: 35px - (5*header)
    margin: 0

titulos(fuente)
  if fuente == fuente1
    font-family: fuente1
  else
    font-family: fuente2
    font-weight: 600
    text-transform: uppercase

*
  margin: 0
  padding: 0
  box-sizing: border-box

body
  color: color-primario
  titulos(fuente1)

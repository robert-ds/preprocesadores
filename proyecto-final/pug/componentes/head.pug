mixin caja--estadistica(imagen,categoria,titulo,sumario)
  .caja
    a(href="#", class="card__image"): img(src="../images/"+imagen)
    .caja__contenido
      span.card__categoria=categoria
      h3=titulo
      p=sumario
    +estadistica

